<script>
async function loadPDF() {
  const file = document.getElementById("pdfFile").files[0];
  if (!file) throw "PDFã‚’é¸æŠã—ã¦ãã ã•ã„";
  const buffer = await file.arrayBuffer();
  return pdfjsLib.getDocument({ data: buffer }).promise;
}

function getSettings() {
  const mode = document.querySelector('input[name="mode"]:checked').value;
  return {
    trim: mode === "projection",
    ratio: mode === "projection" ? 0.18 : 0,
    split: document.getElementById("splitPage").checked,
    mode
  };
}

async function preview() {
  const previewArea = document.getElementById("previewArea");
  previewArea.innerHTML = "ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ç”Ÿæˆä¸­â€¦";

  const pdf = await loadPDF();
  const { trim, ratio, split } = getSettings();

  previewArea.innerHTML = "";

  for (let i = 1; i <= Math.min(pdf.numPages, 3); i++) {
    const page = await pdf.getPage(i);
    const viewport = page.getViewport({ scale: 1.2 });

    const canvas = document.createElement("canvas");
    canvas.width = viewport.width;
    canvas.height = viewport.height;
    await page.render({ canvasContext: canvas.getContext("2d"), viewport }).promise;

    let sx = 0, sy = 0, sw = canvas.width, sh = canvas.height;
    if (trim) {
      sx = canvas.width * ratio;
      sy = canvas.height * ratio;
      sw = canvas.width * (1 - ratio * 2);
      sh = canvas.height * (1 - ratio * 2);
    }

    const draw = (y, h, label) => {
      const c = document.createElement("canvas");
      c.width = sw;
      c.height = h;
      c.getContext("2d").drawImage(canvas, sx, sy + y, sw, h, 0, 0, sw, h);
      const box = document.createElement("div");
      box.innerHTML = `<strong>${label}</strong>`;
      box.appendChild(c);
      previewArea.appendChild(box);
    };

    if (split) {
      draw(0, sh / 2, `PDF ${i}ãƒšãƒ¼ã‚¸ï¼ˆå•é¡Œï¼‰`);
      draw(sh / 2, sh / 2, `PDF ${i}ãƒšãƒ¼ã‚¸ï¼ˆè§£èª¬ï¼‰`);
    } else {
      draw(0, sh, `PDF ${i}ãƒšãƒ¼ã‚¸`);
    }
  }
}

async function convert() {
  const status = document.getElementById("status");
  status.textContent = "PowerPointä½œæˆä¸­â€¦";

  const pdf = await loadPDF();
  const { trim, ratio, split, mode } = getSettings();
  const pptx = new PptxGenJS();

  for (let i = 1; i <= pdf.numPages; i++) {
    const page = await pdf.getPage(i);
    const viewport = page.getViewport({ scale: 2.5 });

    const canvas = document.createElement("canvas");
    canvas.width = viewport.width;
    canvas.height = viewport.height;
    await page.render({ canvasContext: canvas.getContext("2d"), viewport }).promise;

    let sx = 0, sy = 0, sw = canvas.width, sh = canvas.height;
    if (trim) {
      sx = canvas.width * ratio;
      sy = canvas.height * ratio;
      sw = canvas.width * (1 - ratio * 2);
      sh = canvas.height * (1 - ratio * 2);
    }

    const addSlide = (y, h, title) => {
      const c = document.createElement("canvas");
      c.width = sw;
      c.height = h;
      c.getContext("2d").drawImage(canvas, sx, sy + y, sw, h, 0, 0, sw, h);

      const slide = pptx.addSlide();
      slide.addText(title, { x: 0.3, y: 0.2, fontSize: 18, bold: true });
      slide.addImage({ data: c.toDataURL(), x: 0, y: 0.8, w: "100%", h: "90%" });
    };

    if (split) {
      addSlide(0, sh / 2, `å•é¡Œï¼ˆPDF ${i}ãƒšãƒ¼ã‚¸ï¼‰`);
      addSlide(sh / 2, sh / 2, `è§£èª¬ï¼ˆPDF ${i}ãƒšãƒ¼ã‚¸ï¼‰`);
    } else {
      addSlide(0, sh, `PDF ${i}ãƒšãƒ¼ã‚¸`);
    }
  }

  const filename =
    mode === "projection"
      ? "PDF_to_PPT_æŠ•å½±ç”¨.pptx"
      : "PDF_to_PPT_ç”Ÿå¾’é…å¸ƒç”¨.pptx";

  pptx.writeFile(filename);
  status.textContent = "å®Œæˆã—ã¾ã—ãŸï¼";
}
